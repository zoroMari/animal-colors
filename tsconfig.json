{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2017", "dom", "esnext"],
    "importHelpers": true,
    // "alwaysStrict": true,
    // "noImplicitAny": true,
    // "noImplicitThis": true,
    // "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "removeComments": true,
  },
  "include": [
    "src/**/*"
  ]
}
